    .container
        .content
            h2.section-title Pricing options
            p.section-info Secure payment via Stripe or Paypal. 100% money back guarantee.
        .row
            .price-product.left.avtive
                .price-info
                    h4.title Standard license
                    span.value  $49.00
                    ul.text
                        li.list-item Use for a single product
                        li.list-item Non-paying users only
                        li.list-item Read
                            a full description
                    +button()
            .price-product.right
                .price-info
                    h4.title Extended license
                    span.value  $490.00
                    ul.text
                        li.list-item Use for a single product
                        li.list-item Paying users allowed
                        li.list-item Read
                            a full description
                    +button()
